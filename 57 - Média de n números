#include <stdio.h>
#include <math.h>

int main() {
    double n[10000];
    double soma=0.0, media, des=0.0, num;
    int count=0, i, maior;
    while(1) 
    {
        scanf("%lf", &num);
        if(num==-1)
            break;
        n[count] = num;
        soma += num;
        count++;
    }
    media=soma/count;
    for(i=0; i<count; i++) 
    {
        des+=pow(n[i]-media, 2);//elevado a dois
    }
    des=sqrt(des/(count-1));//raï¿½z qudrada
    printf("%.2lf\n", media);
    printf("%.2lf\n", des);

    maior=0;
    for(i=0; i<count; i++) 
    {
        if(n[i]>media)
            maior++;
    }
    printf("%d\n", maior);
    return 0;
}
